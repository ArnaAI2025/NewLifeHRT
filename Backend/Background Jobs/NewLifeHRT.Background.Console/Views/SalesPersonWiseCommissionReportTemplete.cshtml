@using RazorEngine.Text
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salesperson Commission Report</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @@page {
            size: letter;
            margin: 0;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            padding-top: 100px; /* Space for fixed header */
            color: #000;
        }

        /* Fixed header for all pages */
        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: #fff;
            padding: 20px;
            z-index: 1000;
            border-bottom: 2px solid #ddd;
        }

        .header-content {
            display: table;
            width: 100%;
        }

        .header {
            display: table-cell;
            vertical-align: middle;
            width: 70%;
            font-size: 18px;
            font-weight: bold;
            line-height: 1.4;
        }

        .logo-container {
            display: table-cell;
            vertical-align: middle;
            width: 30%;
            text-align: right;
        }

        .logo-image {
            max-height: 60px;
            max-width: 200px;
            display: inline-block;
        }

        .content-wrapper {
            position: relative;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: center;
            border: 1px solid #ddd;
            font-size: 12px;
        }

        th {
            background-color: #1e90ff;
            color: #fff;
            font-weight: bold;
        }

        .commission-table {
            page-break-inside: auto;
        }

            .commission-table thead {
                display: table-header-group;
            }

            .commission-table tbody tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }

            .commission-table th {
                text-align: center;
            }

            .commission-table td {
                text-align: center;
            }

        .total-row {
            font-weight: bold;
            background-color: #f0f8ff;
            page-break-inside: avoid;
        }

        .page-number {
            text-align: center;
            font-size: 10pt;
            margin-top: 20px;
            color: #666;
        }

        @@media print {
            body {
                padding-top: 100px;
            }

            .header-container {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                background: #fff;
                padding: 20px;
                border-bottom: 2px solid #ddd;
            }

            table {
                page-break-inside: auto;
            }

            tr {
                page-break-inside: avoid;
                page-break-after: auto;
            }

            thead {
                display: table-header-group;
            }

            tfoot {
                display: table-footer-group;
            }
        }
    </style>
</head>
<body>
    <!-- Fixed Header (repeats on every page) -->
    <div class="header-container">
        <div class="header-content">
            <div class="header">
                @Model.SalesPersonName - @Model.ReportRange
            </div>
            <div class="logo-container">
                @if (!string.IsNullOrWhiteSpace(Model.Logo))
                {
                    <img src="@Model.Logo" alt="Company Logo" class="logo-image" />
                }
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <table class="commission-table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Total Amount</th>
                    <th>Surcharge</th>
                    <th>Syringe</th>
                    <th>Shipping</th>
                    <th>Commission Applied Total Amount</th>
                    <th>Commission Payable</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CommissionDetails)
                {
                    <tr>
                        <td>@item.Patient</td>
                        <td>@String.Format("{0:C}", item.TotalAmount)</td>
                        <td>@String.Format("{0:C}", item.Surcharge)</td>
                        <td>@String.Format("{0:C}", item.Syringe)</td>
                        <td>@String.Format("{0:C}", item.Shipping)</td>
                        <td>@String.Format("{0:C}", item.CommissionAppliedTotalAmount)</td>
                        <td>@String.Format("{0:C}", item.CommissionPayable)</td>
                    </tr>
                }
                <tr class="total-row">
                    <td>Total</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalAmount)</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalSurcharge)</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalSyringe)</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalShipping)</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalCommissionAppliedAmount)</td>
                    <td>@String.Format("{0:C}", Model.Summary.TotalCommissionPayable)</td>
                </tr>
            </tbody>
        </table>        
    </div>
</body>
</html>